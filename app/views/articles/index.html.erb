<h1>All Articles</h1>
<ul id="articles">
  <% @articles.each do |article| %>
		<li>
			<div class="flex-container">
				<div>
					<a href="<%= article_path(article) %>"><p><%= article.title %></p></a>
				</div>
				<div class="article-pic">
					<% if article.image.exists? %>
					  <a href="<%= article_path(article) %>"><%= image_tag article.image.url(:thumb) %></a><br/>
					<% end %>
				</div>
			</div>
		</li>
  <% end %>
</ul>
<% if logged_in? %>
	<%= link_to "Create a new article", new_article_path(), class: "new_article" %>
<% end %>