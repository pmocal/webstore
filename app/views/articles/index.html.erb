<h1>Recent Posts</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
	<p>
	  <% if article.image.exists? %>
	      <%= image_tag article.image.url(:thumb) %><br/>
	  <% end %>
	</p>
    </li>
  <% end %>
</ul>
<% if logged_in? %>
	<p> <%= link_to "Create a new article", new_article_path(), class: "new_article" %> </p>
<% end %>